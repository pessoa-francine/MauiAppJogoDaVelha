<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppJogoDaVelha.MainPage" >
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Purple" Offset="0.3" />
            <GradientStop Color="Red" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="BorderColor" Value="White" />
            <Setter Property="FontSize" Value="60" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="MinimumHeightRequest" Value="95" />
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*,*" RowSpacing="10" ColumnSpacing="10" Margin="10">
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Jogo da velha" HorizontalTextAlignment="Center"
                    TextColor="White" FontSize="50"/>
            <Button x:Name="btn10" Text="" Grid.Row="1" Grid.Column="0" Clicked="BtnJogar_Clicked" />
            <Button x:Name="btn11" Grid.Row="1" Grid.Column="1" Clicked="BtnJogar_Clicked" />
            <Button x:Name="btn12" Grid.Row="1" Grid.Column="2" Clicked="BtnJogar_Clicked" />

            <Button x:Name="btn20" Grid.Row="2" Grid.Column="0" Clicked="BtnJogar_Clicked" />
            <Button x:Name="btn21" Grid.Row="2" Grid.Column="1" Clicked="BtnJogar_Clicked" />
            <Button x:Name="btn22" Grid.Row="2" Grid.Column="2" Clicked="BtnJogar_Clicked" />

            <Button x:Name="btn30" Grid.Row="3" Grid.Column="0" Clicked="BtnJogar_Clicked" />
            <Button x:Name="btn31" Grid.Row="3" Grid.Column="1" Clicked="BtnJogar_Clicked" />
            <Button x:Name="btn32" Grid.Row="3" Grid.Column="2" Clicked="BtnJogar_Clicked" />
        </Grid>
        <Button x:Name="BtnReset" Text="Reiniciar" Clicked="BtnReset_Clicked" Margin="10" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
